{
  "name": "@franvena/consoleui",
  "version": "1.1.0",
  "description": "A lightweight, high-performance UI toolkit for terminal and browser consoles. Create beautiful styled outputs with zero performance impact. ConsoleUI provides styling, colors, boxes, tables, spinners, and trees in a single tree-shakable package with zero dependencies, ensuring consistent results across all environments.",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": {
    "./terminal": {
      "types": "./dist/terminal/index.d.ts",
      "import": "./dist/terminal/index.js",
      "require": "./dist/terminal/index.cjs"
    },
    "./browser": {
      "types": "./dist/browser/index.d.ts",
      "import": "./dist/browser/index.js",
      "require": "./dist/browser/index.cjs"
    }
  },
  "workspaces": [
    "playground/*"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "semantic-release": "semantic-release",
    "play:terminal": "npm run dev --workspace=playground/terminal",
    "play:browser": "npm run dev --workspace=playground/browser",
    "size": "size-limit"
  },
  "lint-staged": {
    "*": "prettier -w --ignore-unknown",
    "*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "keywords": [
    "console",
    "terminal",
    "colors",
    "ansi",
    "style",
    "formatting",
    "cli",
    "browser"
  ],
  "size-limit": [
    {
      "path": "dist/browser/index.js",
      "limit": "10 kB"
    },
    {
      "path": "dist/browser/index.cjs",
      "limit": "10 kB"
    },
    {
      "path": "dist/terminal/index.js",
      "limit": "10 kB"
    },
    {
      "path": "dist/terminal/index.cjs",
      "limit": "10 kB"
    }
  ],
  "license": "MIT",
  "homepage": "https://github.com/fvena/consoleUI#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fvena/consoleUI.git"
  },
  "bugs": {
    "url": "https://github.com/fvena/consoleUI/issues"
  },
  "author": "Francisco Vena <fvena32@gmail.com> (https://www.fvena.com)",
  "engines": {
    "node": ">=22.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@swc/core": "^1.11.9",
    "@vitest/coverage-v8": "^3.0.8",
    "@vitest/ui": "^3.0.8",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.0",
    "personal-style-guide": "^0.6.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.0.8"
  }
}
